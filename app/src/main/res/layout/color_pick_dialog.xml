<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="0dp"

        android:elevation="10dp"

>
    <RelativeLayout android:layout_width="350dp"
                    android:layout_height="280dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:padding="0dp"
        >

        <TextView
                android:text="Choose a Color!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:id="@+id/textView2"
                android:textSize="30sp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:layout_centerVertical="true"
                      android:orientation="vertical"
                      android:paddingTop="10dp"
        >
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_one"
                        android:src="#FEBCC8"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_two"
                        android:src="#FFFFBF"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:id="@+id/color_three"
                    android:src="#FFE0F6"
                    android:layout_margin="10dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#E5E3E3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_four"
                        android:src="#DDFCDF"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="25dp">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_five"
                        android:src="#EAEBFF"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_six"
                        android:src="#E0FEFE"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_seven"
                        android:src="#CCB5EC"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:id="@+id/color_eight"
                        android:src="#9FC4E1"
                        android:layout_margin="10dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E5E3E3"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>