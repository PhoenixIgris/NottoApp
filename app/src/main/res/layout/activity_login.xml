<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/loginpage">
    <EditText
            android:hint="Enter your email here"
            android:textColorHint="#A5A0A0"
            android:textAlignment="center"
            android:fontFamily="@font/roboto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email"
            tools:layout_editor_absoluteY="392dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="356dp"/>
    <EditText android:layout_width="300dp"
              android:layout_height="50dp"
              android:hint="Enter your password here"
              android:textColorHint="#A5A0A0"
              android:textAlignment="center"
              android:fontFamily="@font/roboto"
              android:inputType="textPassword"
              android:ems="10"
              android:id="@+id/login_password"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="288dp"/>
    <Button android:text="Login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="222dp"
            android:background="#FFE0F6"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>
    <TextView android:text="Don't have an account?"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/textView5"
              android:layout_alignParentStart="true"
              android:layout_marginStart="94dp"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="188dp"/>
    <TextView android:text="Register" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/go_to_register" android:layout_alignParentEnd="true" android:layout_marginEnd="96dp"
              android:layout_alignParentBottom="true" android:layout_marginBottom="188dp"/>
</RelativeLayout>
</RelativeLayout>
